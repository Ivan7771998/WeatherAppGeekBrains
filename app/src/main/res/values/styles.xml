<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="ripplecolor">#DCE3EA</item>
        <item name="colorAccent">#091973</item>
        <item name="backgroundcolor">#fcfcfc</item>
        <item name="cardbackgroundcolor">#ffffff</item>
        <item name="buttomBackgroundColor">#ffffff</item>
        <item name="textcolor">@android:color/black</item>
        <item name="buttoncolor" tools:targetApi="lollipop">#2196F3</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>



    <style name="AppThemeDark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="ripplecolor">#1976D2</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#091973</item>
        <item name="backgroundcolor">#303030</item>
        <item name="buttomBackgroundColor">#221F1F</item>
        <item name="cardbackgroundcolor">#424242</item>
        <item name="textcolor">@android:color/white</item>
        <item name="buttoncolor" tools:targetApi="lollipop">#2196F3</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
