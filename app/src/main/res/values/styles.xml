<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="ripplecolor">#DCE3EA</item>
        <item name="colorAccent">#091973</item>
        <item name="backgroundcolor">#fcfcfc</item>
        <item name="cardbackgroundcolor">#ffffff</item>
        <item name="colorControlHighlight">#2196F3</item>
        <item name="buttomBackgroundColor">#ffffff</item>
        <item name="textcolor">@android:color/black</item>
        <item name="textcolorsubtitle">@android:color/tertiary_text_dark</item>
        <item name="buttoncolor" tools:targetApi="lollipop">#2196F3</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <style name="AppThemeDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="ripplecolor">#1976D2</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#091973</item>
        <item name="backgroundcolor">#303030</item>
        <item name="buttomBackgroundColor">#221F1F</item>
        <item name="cardbackgroundcolor">#424242</item>
        <item name="colorControlHighlight">#2196F3</item>
        <item name="textcolor">@android:color/white</item>
        <item name="textcolorsubtitle">@android:color/secondary_text_light_nodisable</item>
        <item name="buttoncolor" tools:targetApi="lollipop">#2196F3</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationViewStyle">
        <item name="android:textSize">16sp</item> <!-- menu item text size-->
        <item name="android:textColorPrimary">?attr/textcolorsubtitle</item>
        <item name="android:textColorSecondary">?attr/textcolorsubtitle</item>
    </style>

</resources>
